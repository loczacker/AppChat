<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:gravity="start">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_mess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="3dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/im_mess_chat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                tools:src="@drawable/profile_avatar"/>

            <TextView
                android:id="@+id/tv_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/receiver_drawable"
                android:fontFamily="@font/lato_bold"
                android:padding="16dp"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Ko biết làm. Tí tôi qua nhà bà chép..." />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/iv_im_received"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_gravity="start"
            android:scaleType="fitXY"
            tools:src="@drawable/wallpaper"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_mess"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_timeReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text=" Monday 11:52 AM" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
