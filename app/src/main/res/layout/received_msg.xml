<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:gravity="start"
    android:layout_margin="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginVertical="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_mess_chat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_mess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/receiver_drawable"
            android:fontFamily="@font/lato_bold"
            android:padding="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/im_mess_chat"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ko biết làm. Tí tôi qua nhà bà chép..."
            android:layout_marginHorizontal="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="start"
        android:scaleType="fitXY"
        tools:src="@drawable/wallpaper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_mess"
        android:contentDescription="@null"
        android:layout_marginVertical="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>